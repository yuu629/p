<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_at %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @post.end_at %></td>
  </tr>
  <tr>
    <th>終日</th>
  <td><%= @post.is_all_day %></td>      
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_post_path(@post.id) %></li>
    <li>
        <%= link_to "スケジュールを削除", post_path, method: :delete, data: { confirm: "本当に削除しますか？"} %>
    </li>
  </ul>
</div>